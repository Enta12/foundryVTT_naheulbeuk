<h1>TEST</h3>

<div>
    <button>sort level 1</button>
    <ol class="spellBooksItems">

        {{#each actor.spells as |item id|}}


        <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24" /></div>
            <h4 value="{{id}}">{{localize item.data.school}}</h4>
            <h4 class="item-name">{{item.name}}</h4>
            <span>sort niv. {{item.data.spellLevel}}</span>
            <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-eye"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
        </li>

    
    {{/each}}
    </ol>
</div>

