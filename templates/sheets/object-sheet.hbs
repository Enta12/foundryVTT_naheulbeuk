<form id="objectSheetForm" class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.img}}" height="64" width="64" />
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/></h1>
    </header>
    <input name="data.quantity" type="text" value="{{data.quantity}}" data-dtype="Number" />
    <input name="data.useDescription" type="text" value="{{data.useDescription}}" data-dtype="String" />

    <textarea name="data.description">{{data.description}}</textarea>
</form>
